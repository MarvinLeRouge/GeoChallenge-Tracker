{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "baseUrl": ".",
      "paths": { "@/*": ["src/*"] },
      "types": ["vite/client", "node"]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "vite.config.ts"
    ],
    "exclude": ["node_modules", "dist"]
  }
  